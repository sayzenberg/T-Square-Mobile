<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="@string/notification_header"
        android:key="notification_pref">
        
        <CheckBoxPreference 
            android:key="set_notifications"
            android:summary="Enable or disable notifications"
            android:title="@string/notification_enable" 
            android:defaultValue="true"
        />
        
        <ListPreference 
            android:key="updates_notifications"
            android:title="@string/notification_reminder"
            android:summary="Define reminder date before due date"
            android:entries="@array/notificationInterval"
            android:entryValues="@array/notificationIntervalValues"
            android:dependency="set_notifications"
            android:defaultValue="one_day"
        />
        
        <CheckBoxPreference 
            android:key="vibrate_notifications"
            android:title="@string/notification_vibrate" 
            android:dependency="set_notifications"
            android:defaultValue="true"
        />
            
    </PreferenceCategory>
    
</PreferenceScreen>